<!DOCTYPE html>
<html>
  <head>
    <title>Textizen</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="tag">
      <a href="www.codeforamerica.org">
        <img width="100px" border="0" src="/assets/tag_cfa.png">
      </a>
    </div>
    <div class="container">

      <% if user_signed_in? %>
        <%= render "users/top_bar" %>
      <% else %>
        <%= render "layouts/default_top_bar" %>
      <%end %>
      <%= yield %>
    </div>

  </body>
</html>
