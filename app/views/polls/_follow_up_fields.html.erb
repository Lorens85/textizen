<div class="nested-fields followup-field">
  

  <%= f.input :text, :label => 'Followup', :label_html => { :class => "label-bold" } , :hint => (link_to_remove_association "X", f, :class => "inline btn btn-danger btn-mini") %>
  
  <fieldset>
    <div class="control-group">
      <label class="control-label">Type</label>
      <div class="controls">
        <%= f.select(:question_type, options_for_select([['Open','OPEN'],['Multiple Choice','MULTI'],['Yes/No', 'YN']],1)) %>
        
      </div>
    </div>
  </fieldset>

  <div class="options">
    <%= f.simple_fields_for :options do |option| %>
      <%= render 'option_fields', :f => option %>
    <% end %>

    <%= link_to_add_association 'Add followup option', f, :options, :partial => 'polls/follow_up_option_fields', :class => "add-followup-option-button btn btn-mini" %>
  </div>
</div>