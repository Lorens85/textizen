<div class="nested-fields">
	Followup question
  <%= f.input :text, :hint => "User reads this message" %>
  <%= f.select(:question_type, options_for_select([['Open','OPEN'],['Multiple Choice','MULTI'],['Yes/No', 'YN']],1)) %>
  <%= link_to_remove_association "Remove followup", f %>
  <div class="options">
    <%= f.simple_fields_for :options do |option| %>
      <%= render 'option_fields', :f => option %>
    <% end %>
    <%= link_to_add_association 'Add followup option', f, :options, :partial => 'polls/follow_up_option_fields' %>
  </div>
</div>