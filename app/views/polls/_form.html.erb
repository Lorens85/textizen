<%= form_for(@poll, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <fieldset>
    <div class="control-group">
      <%= f.label :title, :class => "control-label"%>
      <div class="controls">
        <%= f.text_field :title %> <span class="help-inline">This is how we'll refer to the poll in text messages and reports</span>
      </div>
    </div>
  </fieldset>
  <%= @poll.questions %>
  <% f.fields_for :questions do |builder| %>
    <fieldset>
      <div class="control-group">
        <%= builder.label :text, :class => "control-label"%>
        <div class="controls">
          <%= builder.text_area :text, :rows => 3 %> <span class="help-inline">To be printed on posters</span>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <div class="control-group">
        <%= builder.label :question_type, :class => "control-label"%>
        <div class="controls">
          <%= builder.select(:question_type, options_for_select([['Open','OPEN'],['Multiple Choice','MULTI'],['Yes/No', 'YN']],1)) %>
        </div>
      </div>
    </fieldset>
  <% end %>

  

  <fieldset>
    <div class="control-group">
      <%= f.label :phone, :class => "control-label"%>
      <div class="controls">
        <input class="input disabled" type="text" disabled="" placeholder="<%= number_to_phone(@poll.phone, :area_code => true) %>"> <span class="help-inline">Automatically assigned</span>
        
      </div>
    </div>
  </fieldset>
 
 <div class="field" style="display:none;">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </div>

<div class="form-actions">
    <%= f.submit :class => 'btn btn-large btn-primary' %>
    <%= link_to 'Cancel', @poll, :class => 'btn btn-large' %>
</div>
<% end %>
