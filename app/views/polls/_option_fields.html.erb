<div class="nested-fields">
  <fieldset>
  <%= f.input :text, :hint => (link_to_remove_association "Remove option", f, :class => "inline") %>
  <%= f.input :value, :class => "span1" %>
  
  <% link_to_add_association 'Add followup to this option', f, :follow_up %>

    <%= f.simple_fields_for :follow_up do |followup| %>
      <%= render 'question_fields', :f => followup %>
    <% end %>
  </fieldset>
  <div class="links">
  </div>
</div>