<div class="container">
<div class="row">
    <div class="span8"><img src="/assets/logo.png"></div>
    <div class="span4 login">Logout</div>
</div>

<div class="row">
  <div class="span12 main">
    <div class="grouptitle">Lower Northeast &rsaquo; #2</div>
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="span6">
    <div class="titlequestion">
      <%= @poll.text %>
    </div>
    placeholder for response graphs and visualizations
  </div>


  <div class="span3 counter">
    responses count
  </div>

  <div class="span3">
    <div class="settings">
    <p><span class="caption">Phone:</span>
      <br><%= @poll.phone %></p>

    <p><span class="caption">Start date:</span>
      <br><%= @poll.start_date.strftime("%m/%d/%Y at %I:%M%p") %></p>

    <p><span class="caption">End date:</span>
      <br></a> <%= @poll.end_date.strftime("%m/%d/%Y at %I:%M%p") %></p>

    <p><span class="caption">Type:</span>
      <br> <%= @poll.poll_type %></p>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <div class="span12">
    <h3>Responses</h3>
    <table class="table">
    	<% @poll.responses.each do |resp| %>
    		<tr><td><%= resp.response %> (from <%= resp.from %> on <%= resp.created_at.strftime("%m/%d/%Y at %I:%M%p")%>)</td></tr>
    	<% end %>
    </table>>

    <%= link_to "Export to csv", request.parameters.merge({:format => :csv})%> |
    <%= link_to 'Edit', edit_poll_path(@poll) %> |
    <%= link_to 'Back', polls_path %>
  </div>
</div>

</div>